{
  "mcpServers": {
    "fetch": {
      "command": "uvx",
      "args": ["mcp-server-fetch"],
      "disabled": false,
      "autoApprove": ["fetch"]
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "your_brave_api_key_here"
      },
      "disabled": false,
      "autoApprove": ["brave_web_search", "brave_local_search"]
    },
    "filesystem": {
      "command": "uvx",
      "args": ["mcp-server-filesystem", "E:/Agent/news_cache"],
      "disabled": false,
      "autoApprove": ["read_file", "write_file", "list_directory"]
    },
    "github": {
      "command": "uvx",
      "args": ["mcp-server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "your_github_token_here"
      },
      "disabled": true,
      "autoApprove": []
    }
  }
}